source 'http://rubygems.org'

gem 'rails', '~> 3.2.0'
gem 'haml'
gem 'sass'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test, :development do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'faker'
end

group :test do
  gem 'factory_girl_rails', '1.0'
end

group :production do
  gem 'mysql'
end
